@model IEnumerable<FactureViewerWithProducts.Models.Facture>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
						<th style="text-align: center;">
                Products
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusName)
            </td>
						<td>
							<ol>	
									@foreach ( var cos in item.FactureProducts)
									{
										<li>
											<ul style="padding-inline-start: 10px">
													@Html.DisplayFor(modelItem => cos.Product.WareName) - 
													@Html.DisplayFor(modelItem => cos.Product.Price) PLN
													<br>
													@* <li>@Html.DisplayFor(modelItem => cos.Product.WareName)</li> *@
													@* <li>@Html.DisplayFor(modelItem => cos.Product.Price)</li> *@
											</ul>
										</li>
									}	
							</ol>

							<span style="margin-top: 5px; font-weight: bold;">Razem: </span>
						</td>
						
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
